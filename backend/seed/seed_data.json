      "threshold": 70,
      "action_config": [
        {
          "type": "notification",
          "template_id": "Humidity Warning",
          "recipients": ["management@factory.com"]
        }
      ],
      "is_enabled": true
    },
    {
      "device": "CUR-SN-001",
      "name": "High Current Draw Warning",
