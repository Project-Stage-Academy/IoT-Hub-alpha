      "recipients": [{ "type": "email", "address": "energy@factory.com" }],
      "priority": 2,
      "retry_count": 2,
      "retry_delay_minutes": 10,
      "is_active": true
    },
    {
      "name": "Flow Rate Warning",
      "message_template": "WARNING: Abnormal flow rate ({value} {unit}) detected on {device_name}.",
      "recipients": [{ "type": "email", "address": "energy@factory.com" }],
      "priority": 2,
      "retry_count": 2,
      "retry_delay_minutes": 10,
      "is_active": true
    }
