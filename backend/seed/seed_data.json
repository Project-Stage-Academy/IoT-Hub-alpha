      "comparison_operator": "lt",
      "threshold": 50.0,
      "action_config": [
        {
          "type": "notification",
          "template_id": "Flow Rate Warning",
          "recipients": ["management@factory.com"]
        }
      ],
      "is_enabled": true
    },
    {
      "device": "HMD-SN-001",
