      "threshold": 160,
      "action_config": [
        {
          "type": "notification",
          "template_id": "Power Consumption Warning",
          "recipients": ["management@factory.com"]
        }
      ],
      "is_enabled": true
    },
    {
      "device": "CUR-SN-001",
      "name": "Critical Current Draw Alert",
