  "rules": [
    {
      "device": "VIB-SN-001",
      "name": "Low Vibration Alert – Lathe #1",
      "description": "Alerts maintenance when vibration drops below expected operating range",
      "comparison_operator": "lt",
      "threshold": 15.3,
      "action_config": [
        {
          "type": "notification",
          "template_id": "Critical Vibration Alert",
          "recipients": ["maintenance@factory.com", "supervisor@factory.com"]
        }
      ],
      "is_enabled": true
    },
    {
      "device": "TEMP-SN-002",
      "name": "Critical Temperature – CNC Mill #2",
      "description": "Stops the machine if temperature exceeds the critical threshold",
      "comparison_operator": "gt",
      "threshold": 100.8,
      "action_config": [
        {
          "type": "stop_machine",
          "machine_id": "CNC-002"
        },
        {
          "type": "notification",
          "template_id": "Temperature Emergency",
          "recipients": ["emergency@factory.com"]
        }
      ],
      "is_enabled": true
    },
    {
      "device": "PWR-SN-003",
      "name": "High Power Consumption Warning",
      "description": "Alerts energy management when power consumption exceeds normal levels",
      "comparison_operator": "gt",
      "threshold": 80.5,
      "action_config": [
        {
          "type": "notification",
          "template_id": "Power Consumption Warning",
          "recipients": ["energy@factory.com"]
        }
      ],
      "is_enabled": true
    },
    {
      "device": "FLW-SN-001",
      "name": "High Flow Rate Warning",
      "description": "Alerts management when flow rate exceeds safe operating limits",
      "comparison_operator": "gt",
      "threshold": 300.0,
      "action_config": [
        {
          "type": "notification",
          "template_id": "Flow Rate Warning",
          "recipients": ["management@factory.com"]
        }
      ],
      "is_enabled": true
    },
    {
      "device": "FLW-SN-001",
      "name": "Low Flow Rate Warning",
