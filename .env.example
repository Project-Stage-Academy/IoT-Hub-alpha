# IoT Hub Alpha - Environment Configuration

# Copy this file to .env and update values for your local environment
# DO NOT commit .env file to version control

# Django Configuration

DEBUG=True
# SECURITY WARNING: Generate a secure key for production using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-development-key-CHANGE-THIS-IN-PRODUCTION-abc123xyz789
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_ALLOW_SEED_FLUSH=1

# Admin user (superuser)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Operator user (staff)
OPERATOR_USERNAME=operator
OPERATOR_EMAIL=operator@example.com
OPERATOR_PASSWORD=operator123

# Viewer user (staff)
VIEWER_USERNAME=viewer
VIEWER_EMAIL=viewer@example.com
VIEWER_PASSWORD=viewer123

DEVICE_TELEMETRY_INLINE_LIMIT=10
# Database Configuration (PostgreSQL with TimescaleDB)

# Database connection settings for local development
DB_NAME=iot_hub_alpha_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_CONNECT_TIMEOUT=10

# Database connection pool settings (optional)
# DB_CONN_MAX_AGE=60
DB_CONN_HEALTH_CHECKS=True

# TimescaleDB Configuration

# Telemetry data retention (in days)
TELEMETRY_RETENTION_DAYS=90

# Celery/Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
